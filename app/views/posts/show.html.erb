<h1><%= @post.title %> </h1>
<%= @post.content %> 
<p>posted by
<% if @post.author_id!=nil %>
<%= @author.find(@post.author_id).nickname %>
<%= link_to "Przejdź do autora", author_path(@post.author_id) %>
<% else %>
<%= "Anon" %>
<% end %></p>
<%= link_to "Edytuj", [:edit, @post] %>
<%= link_to "Usuń", post_path(@post.id), method: :delete %>
<%= link_to "Skomentuj", new_comment_path(post_id:@post.id) %>